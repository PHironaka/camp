

{%- assign collection = collections[section.settings.collection] -%}

{% for product in collection.products limit: 20 %}

<div class="product-post">
  <a href="{{ product.url | within: collection }}" class="product {{product.title}}">
<div class="product-image">
        <img src="{{ product.featured_image.src | img_url: 'large' }}" alt="{{ featured.featured_image.alt | escape }}">
     {% for image in product.images %}
            <img src="{{ image.src | img_url: 'master' }}" alt="{{ image.alt | escape }}">
      {% endfor %}
</div>
    <h4>{{ product.title }}</h4>
    <div class="details">
<h5> 
        {{ product.price | money }}
         </h5>  
         <img src="https://cdn.shopify.com/s/files/1/0014/8648/7629/files/clickhere.gif?17740246374704191582" class="buy-button"> 
  </div>

</a>

</div>

{% endfor %}




{% schema %}
  {
    "name": "Featured collection",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Featured collection"
      },
      {
        "id": "collection",
        "type": "collection",
        "label": "Collection"
      }
    ],
    "presets": [
      {
        "name": "Featured collection",
        "category": "Collection"
      }
    ]
  }

{% endschema %}
